    { label: 'Tab 2', content: 'Content 2', active: false },
    { label: 'Tab 3', content: 'Content 3', active: false }
  ],
  variant = 'primary',
  size = 'medium',
  fullWidth = false
} = Astro.props;
---

<div id="tabs-cd0epcmmd" class="md-tabs md-tabs--primary md-tabs--medium" role="tablist" aria-orientation="horizontal" >
  <div class="md-tabs__header">
    
    <button class="md-tab md-tab--active" 
            id="tabs-cd0epcmmd-tab-0"
            role="tab"
            aria-selected="true"
            aria-controls="tabs-cd0epcmmd-panel-0"
