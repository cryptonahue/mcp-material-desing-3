---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
---

<Layout title="Data Components - Material Design 3 Components">
	<main class="min-h-screen bg-surface p-6">
		<div class="max-w-7xl mx-auto">
			<!-- Header -->
			<header class="mb-8">
				<nav class="mb-4">
					<a href="/components" class="text-primary hover:text-primary-variant inline-flex items-center gap-2">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
						</svg>
						Back to Components
					</a>
				</nav>
				<h1 class="text-4xl font-bold text-on-surface mb-4">Data Components</h1>
				<p class="text-lg text-on-surface-variant mb-8">Material Design 3 components for displaying and organizing data</p>
			</header>

			<!-- Lists -->
			<Card variant="elevated" class="p-6 mb-12">
				<h3 class="text-2xl font-semibold text-on-surface mb-6">Lists</h3>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
					<!-- Basic List -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">Basic List</h4>
						<div class="bg-surface-container border border-outline rounded-xl overflow-hidden">
							<div class="divide-y divide-outline-variant">
								<div class="p-4 hover:bg-surface-container-high transition-colors cursor-pointer">
									<div class="flex items-center gap-4">
										<div class="w-10 h-10 bg-primary-container rounded-full flex items-center justify-center">
											<svg class="w-5 h-5 text-on-primary-container" fill="currentColor" viewBox="0 0 20 20">
												<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
											</svg>
										</div>
										<div class="flex-1">
											<h5 class="font-medium text-on-surface">John Doe</h5>
											<p class="text-sm text-on-surface-variant">Software Engineer</p>
										</div>
									</div>
								</div>
								<div class="p-4 hover:bg-surface-container-high transition-colors cursor-pointer">
									<div class="flex items-center gap-4">
										<div class="w-10 h-10 bg-secondary-container rounded-full flex items-center justify-center">
											<svg class="w-5 h-5 text-on-secondary-container" fill="currentColor" viewBox="0 0 20 20">
												<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
											</svg>
										</div>
										<div class="flex-1">
											<h5 class="font-medium text-on-surface">Jane Smith</h5>
											<p class="text-sm text-on-surface-variant">Product Designer</p>
										</div>
									</div>
								</div>
								<div class="p-4 hover:bg-surface-container-high transition-colors cursor-pointer">
									<div class="flex items-center gap-4">
										<div class="w-10 h-10 bg-tertiary-container rounded-full flex items-center justify-center">
											<svg class="w-5 h-5 text-on-tertiary-container" fill="currentColor" viewBox="0 0 20 20">
												<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
											</svg>
										</div>
										<div class="flex-1">
											<h5 class="font-medium text-on-surface">Mike Johnson</h5>
											<p class="text-sm text-on-surface-variant">Project Manager</p>
										</div>
									</div>
								</div>
							</div>
