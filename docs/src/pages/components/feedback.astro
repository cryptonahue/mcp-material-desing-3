---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
---

<Layout title="Feedback Components - Material Design 3 Components">
	<main class="min-h-screen bg-surface p-6">
		<div class="max-w-7xl mx-auto">
			<!-- Header -->
			<header class="mb-8">
				<nav class="mb-4">
					<a href="/components" class="text-primary hover:text-primary-variant inline-flex items-center gap-2">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
						</svg>
						Back to Components
					</a>
				</nav>
				<h1 class="text-4xl font-bold text-on-surface mb-4">Feedback Components</h1>
				<p class="text-lg text-on-surface-variant mb-8">Material Design 3 components for user feedback and status indication</p>
			</header>

			<!-- Snackbars -->
			<Card variant="elevated" class="p-6 mb-12">
				<h3 class="text-2xl font-semibold text-on-surface mb-6">Snackbars</h3>
				<div class="space-y-6">
					<!-- Basic Snackbar -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">Basic</h4>
						<div class="bg-inverse-surface text-inverse-on-surface px-4 py-3 rounded-lg shadow-lg max-w-md">
							<p class="text-sm">Message sent successfully</p>
						</div>
					</div>

					<!-- Snackbar with Action -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">With Action</h4>
						<div class="bg-inverse-surface text-inverse-on-surface px-4 py-3 rounded-lg shadow-lg max-w-md flex items-center justify-between">
							<p class="text-sm">Email archived</p>
							<button class="text-primary-container hover:text-primary-container-variant font-medium text-sm ml-4 transition-colors">
								UNDO
							</button>
						</div>
					</div>

					<!-- Error Snackbar -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">Error State</h4>
						<div class="bg-error text-on-error px-4 py-3 rounded-lg shadow-lg max-w-md flex items-center gap-3">
							<svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
							</svg>
							<p class="text-sm">Failed to send message. Please try again.</p>
							<button class="text-on-error hover:opacity-80 ml-auto transition-opacity">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
								</svg>
							</button>
						</div>
					</div>

					<!-- Success Snackbar -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">Success State</h4>
						<div class="bg-primary text-on-primary px-4 py-3 rounded-lg shadow-lg max-w-md flex items-center gap-3">
							<svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
							<p class="text-sm">Changes saved successfully</p>
						</div>
					</div>
				</div>
			</Card>

			<!-- Dialogs -->
			<Card variant="elevated" class="p-6 mb-12">
				<h3 class="text-2xl font-semibold text-on-surface mb-6">Dialogs</h3>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
					<!-- Basic Dialog -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">Basic Dialog</h4>
						<div class="bg-surface-container-high rounded-xl p-6 shadow-xl max-w-sm border border-outline-variant">
							<h5 class="text-lg font-semibold text-on-surface mb-3">Confirm Action</h5>
							<p class="text-sm text-on-surface-variant mb-6">Are you sure you want to delete this item? This action cannot be undone.</p>
							<div class="flex gap-2 justify-end">
								<button class="px-4 py-2 text-primary hover:bg-primary-container hover:text-on-primary-container rounded-full transition-all duration-300">
									Cancel
								</button>
								<button class="px-4 py-2 bg-primary text-on-primary rounded-full hover:shadow-lg transition-all duration-300">
									Delete
								</button>
							</div>
						</div>
					</div>

					<!-- Dialog with Icon -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">With Icon</h4>
						<div class="bg-surface-container-high rounded-xl p-6 shadow-xl max-w-sm border border-outline-variant">
							<div class="flex items-center gap-3 mb-4">
								<div class="w-10 h-10 bg-error-container rounded-full flex items-center justify-center">
									<svg class="w-5 h-5 text-on-error-container" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<h5 class="text-lg font-semibold text-on-surface">Warning</h5>
							</div>
							<p class="text-sm text-on-surface-variant mb-6">This action will permanently delete all selected files. This cannot be undone.</p>
							<div class="flex gap-2 justify-end">
								<button class="px-4 py-2 text-primary hover:bg-primary-container hover:text-on-primary-container rounded-full transition-all duration-300">
									Cancel
								</button>
								<button class="px-4 py-2 bg-error text-on-error rounded-full hover:shadow-lg transition-all duration-300">
									Delete All
								</button>
							</div>
						</div>
					</div>

					<!-- Full-screen Dialog Preview -->
					<div class="lg:col-span-2">
						<h4 class="text-lg font-medium text-on-surface mb-4">Full-screen Dialog (Preview)</h4>
						<div class="bg-surface-container-high rounded-xl shadow-xl border border-outline-variant overflow-hidden">
							<!-- Header -->
							<div class="bg-surface-container-highest px-6 py-4 border-b border-outline-variant flex items-center justify-between">
								<div class="flex items-center gap-3">
									<button class="w-8 h-8 rounded-full hover:bg-surface-container-high flex items-center justify-center transition-colors">
										<svg class="w-5 h-5 text-on-surface" fill="currentColor" viewBox="0 0 20 20">
											<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
										</svg>
									</button>
									<h5 class="text-lg font-semibold text-on-surface">Edit Profile</h5>
								</div>
								<button class="px-4 py-2 bg-primary text-on-primary rounded-full hover:shadow-lg transition-all duration-300">
									Save
								</button>
							</div>
							<!-- Content -->
							<div class="p-6">
								<div class="space-y-4">
									<div class="relative">
										<input type="text" class="w-full px-4 py-3 border-2 border-outline rounded-lg focus:border-primary focus:outline-none transition-colors" placeholder=" " value="John Doe" />
										<label class="absolute left-3 -top-2 px-1 bg-surface-container-high text-xs text-on-surface-variant font-medium">Full Name</label>
									</div>
									<div class="relative">
										<input type="email" class="w-full px-4 py-3 border-2 border-outline rounded-lg focus:border-primary focus:outline-none transition-colors" placeholder=" " value="john@example.com" />
										<label class="absolute left-3 -top-2 px-1 bg-surface-container-high text-xs text-on-surface-variant font-medium">Email</label>
									</div>
									<div class="relative">
										<textarea rows="3" class="w-full px-4 py-3 border-2 border-outline rounded-lg focus:border-primary focus:outline-none transition-colors resize-none" placeholder=" ">Senior Designer passionate about creating beautiful user experiences.</textarea>
										<label class="absolute left-3 -top-2 px-1 bg-surface-container-high text-xs text-on-surface-variant font-medium">Bio</label>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</Card>

			<!-- Progress Indicators -->
			<Card variant="elevated" class="p-6 mb-12">
				<h3 class="text-2xl font-semibold text-on-surface mb-6">Progress Indicators</h3>
				<div class="space-y-8">
					<!-- Linear Progress -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">Linear Progress</h4>
						<div class="space-y-6">
							<!-- Determinate -->
							<div>
								<div class="flex justify-between items-center mb-2">
									<span class="text-sm text-on-surface-variant">Determinate</span>
									<span class="text-sm text-on-surface font-medium">65%</span>
								</div>
								<div class="w-full bg-surface-container-highest rounded-full h-2">
									<div class="bg-primary h-2 rounded-full transition-all duration-300" style="width: 65%"></div>
								</div>
							</div>

							<!-- Indeterminate -->
							<div>
								<div class="flex justify-between items-center mb-2">
									<span class="text-sm text-on-surface-variant">Indeterminate</span>
								</div>
								<div class="w-full bg-surface-container-highest rounded-full h-2 overflow-hidden">
									<div class="bg-primary h-2 rounded-full animate-pulse" style="width: 40%; margin-left: 30%"></div>
								</div>
							</div>

							<!-- Buffer -->
							<div>
								<div class="flex justify-between items-center mb-2">
									<span class="text-sm text-on-surface-variant">Buffer</span>
									<span class="text-sm text-on-surface font-medium">45%</span>
								</div>
								<div class="w-full bg-surface-container-highest rounded-full h-2 relative">
									<div class="bg-primary-container h-2 rounded-full absolute" style="width: 75%"></div>
									<div class="bg-primary h-2 rounded-full relative transition-all duration-300" style="width: 45%"></div>
								</div>
							</div>
						</div>
					</div>

					<!-- Circular Progress -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">Circular Progress</h4>
						<div class="flex items-center gap-8">
							<!-- Determinate -->
							<div class="text-center">
								<div class="relative w-16 h-16 mb-2">
									<svg class="w-16 h-16 transform -rotate-90" viewBox="0 0 36 36">
										<path class="text-surface-container-highest" stroke="currentColor" stroke-width="3" fill="none" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
										<path class="text-primary" stroke="currentColor" stroke-width="3" fill="none" stroke-linecap="round" stroke-dasharray="75, 100" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
									</svg>
									<div class="absolute inset-0 flex items-center justify-center">
										<span class="text-xs font-medium text-on-surface">75%</span>
									</div>
								</div>
								<span class="text-sm text-on-surface-variant">Determinate</span>
							</div>

							<!-- Indeterminate -->
							<div class="text-center">
								<div class="w-16 h-16 mb-2">
									<svg class="w-16 h-16 animate-spin" viewBox="0 0 36 36">
										<path class="text-surface-container-highest" stroke="currentColor" stroke-width="3" fill="none" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
										<path class="text-primary" stroke="currentColor" stroke-width="3" fill="none" stroke-linecap="round" stroke-dasharray="25, 100" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
									</svg>
								</div>
								<span class="text-sm text-on-surface-variant">Indeterminate</span>
							</div>

							<!-- Small Spinner -->
							<div class="text-center">
								<div class="w-8 h-8 mb-2">
									<svg class="w-8 h-8 animate-spin" viewBox="0 0 36 36">
										<path class="text-surface-container-highest" stroke="currentColor" stroke-width="4" fill="none" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
										<path class="text-primary" stroke="currentColor" stroke-width="4" fill="none" stroke-linecap="round" stroke-dasharray="25, 100" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
									</svg>
								</div>
								<span class="text-sm text-on-surface-variant">Small</span>
							</div>
						</div>
					</div>
				</div>
			</Card>

			<!-- Loading States -->
			<Card variant="elevated" class="p-6 mb-12">
				<h3 class="text-2xl font-semibold text-on-surface mb-6">Loading States</h3>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					<!-- Button Loading -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">Button Loading</h4>
						<div class="space-y-3">
							<button class="w-full px-6 py-3 bg-primary text-on-primary rounded-full hover:shadow-lg transition-all duration-300 flex items-center justify-center gap-2">
								<svg class="w-4 h-4 animate-spin" viewBox="0 0 36 36">
									<path class="text-on-primary opacity-30" stroke="currentColor" stroke-width="4" fill="none" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
									<path class="text-on-primary" stroke="currentColor" stroke-width="4" fill="none" stroke-linecap="round" stroke-dasharray="25, 100" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
								</svg>
								Loading...
							</button>
							<button class="w-full px-6 py-3 bg-primary text-on-primary rounded-full opacity-60 cursor-not-allowed flex items-center justify-center gap-2">
								<div class="w-4 h-4 bg-on-primary rounded-full animate-pulse"></div>
								Processing...
							</button>
						</div>
					</div>

					<!-- Card Skeleton -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">Card Skeleton</h4>
						<div class="bg-surface-container border border-outline rounded-xl p-4">
							<div class="animate-pulse">
								<div class="h-32 bg-surface-container-high rounded-lg mb-4"></div>
								<div class="h-4 bg-surface-container-high rounded mb-2"></div>
								<div class="h-4 bg-surface-container-high rounded w-3/4 mb-4"></div>
								<div class="flex gap-2">
									<div class="h-8 bg-surface-container-high rounded-full w-16"></div>
									<div class="h-8 bg-surface-container-high rounded-full w-20"></div>
								</div>
							</div>
						</div>
					</div>

					<!-- Loading Overlay -->
					<div>
						<h4 class="text-lg font-medium text-on-surface mb-4">Loading Overlay</h4>
						<div class="relative bg-surface-container border border-outline rounded-xl p-4 h-40">
							<div class="h-4 bg-surface-container-high rounded mb-2"></div>
							<div class="h-4 bg-surface-container-high rounded w-3/4 mb-2"></div>
							<div class="h-4 bg-surface-container-high rounded w-1/2"></div>
							
							<!-- Overlay -->
							<div class="absolute inset-0 bg-surface bg-opacity-80 rounded-xl flex items-center justify-center">
								<div class="text-center">
									<svg class="w-8 h-8 animate-spin mx-auto mb-2 text-primary" viewBox="0 0 36 36">
										<path class="text-surface-container-highest" stroke="currentColor" stroke-width="4" fill="none" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
										<path class="text-primary" stroke="currentColor" stroke-width="4" fill="none" stroke-linecap="round" stroke-dasharray="25, 100" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
									</svg>
									<p class="text-sm text-on-surface">Loading content...</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</Card>

			<!-- Alerts and Banners -->
			<Card variant="elevated" class="p-6 mb-12">
				<h3 class="text-2xl font-semibold text-on-surface mb-6">Alerts and Banners</h3>
				<div class="space-y-6">
					<!-- Info Alert -->
					<div class="bg-primary-container border-l-4 border-primary p-4 rounded-r-lg">
						<div class="flex items-start gap-3">
							<svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
							</svg>
							<div class="flex-1">
								<h5 class="font-medium text-on-primary-container mb-1">Information</h5>
								<p class="text-sm text-on-primary-container opacity-90">This is an informational message to help users understand the current state.</p>
							</div>
							<button class="text-on-primary-container hover:opacity-80 transition-opacity">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
								</svg>
							</button>
						</div>
					</div>

					<!-- Warning Alert -->
					<div class="bg-tertiary-container border-l-4 border-tertiary p-4 rounded-r-lg">
						<div class="flex items-start gap-3">
							<svg class="w-5 h-5 text-tertiary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
							</svg>
							<div class="flex-1">
								<h5 class="font-medium text-on-tertiary-container mb-1">Warning</h5>
								<p class="text-sm text-on-tertiary-container opacity-90">Please review your settings before proceeding. Some changes may affect system performance.</p>
							</div>
							<button class="text-on-tertiary-container hover:opacity-80 transition-opacity">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
								</svg>
							</button>
						</div>
					</div>

					<!-- Error Alert -->
					<div class="bg-error-container border-l-4 border-error p-4 rounded-r-lg">
						<div class="flex items-start gap-3">
							<svg class="w-5 h-5 text-error flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
							</svg>
							<div class="flex-1">
								<h5 class="font-medium text-on-error-container mb-1">Error</h5>
								<p class="text-sm text-on-error-container opacity-90">Unable to save changes. Please check your connection and try again.</p>
								<div class="mt-3">
									<button class="px-4 py-2 bg-error text-on-error rounded-full text-sm hover:shadow-lg transition-all duration-300">
										Retry
									</button>
								</div>
							</div>
							<button class="text-on-error-container hover:opacity-80 transition-opacity">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
								</svg>
							</button>
						</div>
					</div>

					<!-- Success Alert -->
					<div class="bg-primary-container border-l-4 border-primary p-4 rounded-r-lg">
						<div class="flex items-start gap-3">
							<svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
							<div class="flex-1">
								<h5 class="font-medium text-on-primary-container mb-1">Success</h5>
